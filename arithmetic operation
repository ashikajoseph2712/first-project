#include <stdio.h>

int main() {
    int n;
    float r,a,b;
    printf("Enter the first number :");
    scanf("%f",&a);
    printf("Enter the second number: ");
    scanf("%f",&b);
    printf("Enter the operation to be performed:\n 1.Addition, 2.Subtraction, 3.Multiplication, 4.Division\n");
    scanf("%d",&n);
    switch(n)
    {
        case 1:
            r=a+b;
            printf("Addition result = %.2f \n",r);
            break;
        case 2:
            r=a-b;
            printf("Subtraction result= %.2f \n",r);
            break;
        case 3:
            r=a*b;
            printf("Multiplication result= %.2f \n",r);
            break;
        case 4:
            if(b!=0)
            {
            r=a/b;
            printf("Division result = %.2f \n",r);
            }
        else
        {
            printf("Division with zero is not possible");
        }
         break;
    default: 
        printf("Invalid option");
    }
    return 0;
}
